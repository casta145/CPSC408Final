<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Products</title>

    <link rel="stylesheet" type ="text/css" href = "styles/header.css" />
    <link rel="stylesheet" type ="text/css" href = "styles/sub-pages.css" />
    <link rel="stylesheet" type ="text/css" href = "styles/home.css"/>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  </head>
  <body>

    <% include partials/header.ejs %>

    <div class="title-block">
      <h2>Product Search</h2>
    </div>

    <div class="product-content">

      <form class="search-form" id="search-form" action="/products" method="POST">
      <!-- <form class="search-form" method="post"> -->
      <label for="skuNumber">Sku Number:</label>
      <input class="sku-search" id="skuNumber" name="skuNumber" type="text" value="<%= qs.skuNumber %>" placeholder="Enter SKU"/>
      <input type="submit" value="Search">
      <!-- <button>Submit</button> -->
      </form>
      <div class="insertToDB">
        <!-- Trigger/Open The Modal -->
        <label for="insertBtn">Create New Record:</label>
        <button id="insertBtn" class="insert-buttons">Insert</button>
      </div>
      <form class="search-form" id="search-form" action="/deleteProduct" method="POST">
        <label for="skuNumber">Delete Product:</label>
        <input class="sku-search" id="skuNumber" name="skuNumber" type="text" value="<%= qs.skuNumber %>" placeholder="Enter SKU"/>
        <input type="submit" value="Delete">
      </form>
      <form action="/products-search-all" method="POST">
        <button type="submit" class="small-buttons">Search All</button>
      </form>

        <form action="/home">
          <button type="submit" class="small-buttons">Go Back</button>
        </form>
      <!-- </div> -->

    </div>
    <%= qs.skuNumber %>
    <section>
      <table id="myTable"> </table>
    </section>

    <!-- The Modal -->
    <div id="myModal" class="modal">

    <!-- Modal content -->
      <div class="modal-content">
        <span class="close">&times;</span>
        <p>Enter Data for New Item:</p>
        <form class="submit-form" action="/insertRecord" method="POST">
          <input action="insertRecord" name="skuNumber" type= "text" id ="skuNumber" placeholder="SKU" value="<%= qs.skuNumber %>">
          <input action="insertRecord" name="description" type= "text" id ="description" placeholder="Description" value="<%= qs.des %>">
          <input action="insertRecord" name="sellable" type= "text" id ="sellable" placeholder="Sellable On Hand" value="<%= qs.sellable %>">
          <input action="insertRecord" name="openPO" type= "text" id ="openPO" placeholder="Open PO Qty" value="<%= qs.poNum %>">
          <input action="insertRecord" name="moq" type= "text" id ="moq" placeholder="MOQ" value="<%= qs.moq %>">
          <input action="insertRecord" name="leadtime" type= "text" id ="leadtime"  placeholder="Lead Time" value="<%= qs.leadtime %>">
          <input action="insertRecord" name="bkorder" type= "text" id ="bkorder" placeholder="Back Orders" value="<%= qs.bkorder %>">
          <button id = "closebtn" class="insert-buttons">Insert</button>
        </form>
      </div>
    </div>
    <%= qs.skuNumber %>
    <%= qs.des %>
    <%= qs.sellable %>
    <%= qs.poNum %>
    <%= qs.moq %>
    <%= qs.leadtime %>
    <%= qs.bkorder %>
    <script>
      // Get the modal
      var modal = document.getElementById('myModal');
      // Get the button that opens the modal
      var btn = document.getElementById("insertBtn");
      // Get the <span> element that closes the modal
      var span = document.getElementsByClassName("close")[0];
      // After submit button is hit, it triggers the modal to close
      var close = document.getElementById("closebtn");
      // When the user clicks the button, open the modal
      btn.onclick = function() {
        modal.style.display = "block";
        }
      // When the user clicks on <span> (x), close the modal
      span.onclick = function() {
        modal.style.display = "none";
        }
        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function(event) {
          if (event.target == modal) {
            modal.style.display = "none";
          }
        }
        close.onclick = function(){
          modal.style.display = "none";
        }
      </script>
  </body>
</html>
