<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Shipping</title>

    <link rel="stylesheet" type ="text/css" href = "styles/header.css" />
    <link rel="stylesheet" type ="text/css" href = "styles/sub-pages.css" />
    <link rel="stylesheet" type ="text/css" href = "styles/home.css"/>


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  </head>
  <body>
    <% include partials/header.ejs %>

    <div class="title-block">
      <h2>Shipping Search</h2>
    </div>

    <div class="shipping-content">
      <form class="search-form" id="search-form" action="/shipping" method="POST">
      <label for="skuNumber">Sku Number:</label>
      <input class="sku-search" id="skuNumber" name="skuNumber" type="text" value="<%= qs.skuNumber %>" placeholder="Enter SKU"/>
      <label for="shPOnum">PO Number:</label>
      <input class="sku-search" id="shPOnum" name="shPOnum" type="text" value="<%= qs.shPOnum %>" placeholder="Enter PO"/>
      <input type="submit" value="Submit">
      </form>

        <div class="inserttoDB">
            <label for="insertBtn">Create New Record:</label>
            <button id="insertBtn" class="insert-buttons">INSERT</button>
        </div>
        <form class="search-form" id="search-form" action="/deleteShipping" method="POST">
          <label for="skuNumber">Delete Product:</label>
          <input class="sku-search" id="skuNumber" name="skuNumber" type="text" value="<%= qs.skuNumber %>" placeholder="Enter SKU"/>
          <input type="submit" value="Submit">
        </form>
          <form action="/home">
          <button type="submit" class="small-buttons">Go Back</button>
        </form>
      </div>
    <%= qs.skuNumber %>
    <%= qs.shPOnum %>
    <section>
      <table id="myTable"> </table>
    </section>


    <!-- The Modal -->
    <div id="myModal" class="modal">

    <!-- Modal content -->
      <div class="modal-content">
        <span class="close">&times;</span>
        <p>Enter Data for New Shipping Record:</p>
        <form class="submit-form" action="insertshipping" method="POST">
          <input action="insertshipping" name="skuNumber" type= "text" id ="skuNumber" placeholder="SKU" value="<%= qs.skuNumber %>">
          <input action="insertshipping" name="shippingdate" type= "text" id ="shippingdate" placeholder="Shipping Date" value="<%= qs.ShippingDate %>">
          <input action="insertshipping" name="shippingpo" type= "text" id ="shippingpo" placeholder="Shipping PO Number" value="<%= qs.Shipping_Po %>">
          <input action="insertshipping" name="shippingqty" type= "text" id ="shippingqty" placeholder="Shipping Qty" value="<%= qs.shippingqty %>">
          <input action="insertshipping" name="incostperunit" type= "text" id ="incostperunit" placeholder="In cost/Unit" value="<%= qs.IncostUnit %>">
          <input action="insertshipping" name="shiptotalamount" type= "text" id ="shippingtotalamount"  placeholder="Shipping Total Amt" value="<%= qs.ShipTotalAmount %>">
          <input action="insertshipping" name="received" type= "text" id ="received" placeholder="Received" value="<%= qs.received %>">
          <input action="insertshipping" name="ShippingDateReceived" type= "text" id ="ShippingDateReceived" placeholder="ShippingDateReceived" value="<%= qs.ShippingDateReceived %>">
          <button id = "closebtn" class="insert-buttons">Submit</button>
        </form>
      </div>
    </div>
    <%= qs.skuNumber %>
    <%= qs.ShippingDate %>
    <%= qs.Shipping_Po %>
    <%= qs.shippingqty %>
    <%= qs.IncostUnit %>
    <%= qs.ShipTotalAmount%>
    <%= qs.received %>
    <%= qs.ShippingDateReceived %>
    <script>
      // Get the modal
      var modal = document.getElementById('myModal');
      // Get the button that opens the modal
      var btn = document.getElementById("insertBtn");
      // Get the <span> element that closes the modal
      var span = document.getElementsByClassName("close")[0];
      // After submit button is hit, it triggers the modal to close
      var close = document.getElementById("closebtn");
      // When the user clicks the button, open the modal
      btn.onclick = function() {
        modal.style.display = "block";
        }
      // When the user clicks on <span> (x), close the modal
      span.onclick = function() {
        modal.style.display = "none";
        }
        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function(event) {
          if (event.target == modal) {
            modal.style.display = "none";
          }
        }
        close.onclick = function(){
          modal.style.display = "none";
        }
      </script>
  </body>
</html>
